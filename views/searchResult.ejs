                            <li class="nav-item" role="presentation"><a class="nav-link js-scroll-trigger"
                                    href="./profileSettings.html">FILTER 5</a></li>
                        </ul>
                    </div>
                </nav>
            </div>


            <div class="container-fluid" id="searchResult">
                <div class="container">
                    <div class="row product-list dev" id="beerResult">
                        <%- getSearchResult %>
                    </div>
                </div>

            </div>

