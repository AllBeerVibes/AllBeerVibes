<%- include('partials/header') %>
    <div>
        <div class="container">
            <div class="row">

                <div class="col-md-4">
                    <div id="vertical-menu nav nav-tabs card-header-tabs" role="tablist">
                        <div class="list-group nav nav-tabs card-header-tabs">
                            <a class="settings list-group-item active" id="item-1-1-tab" data-toggle="tab" role="tab" aria-controls="item-1-1" aria-selected="true" href="#item-1-1"> 
                                <i class="fa fa-info-circle fa-fw"></i> Information</a>
                            <a class="settings list-group-item" id="item-1-2-tab" data-toggle="tab" role="tab" aria-controls="item-1-2" aria-selected="false" href="#item-1-2"> 
                                <i class="fa fa-heart fa-fw"></i> Favorites</a>
                            <a class="settings list-group-item" id="item-1-3-tab" data-toggle="tab" role="tab" aria-controls="item-1-3" aria-selected="false" href="#item-1-3"> 
                                <i class="fa fa-pencil fa-fw"></i> Quiz</a>
                            <a class="settings list-group-item" id="item-1-4-tab" data-toggle="tab" role="tab" aria-controls="item-1-4" aria-selected="false" href="#item-1-4"> 
                                <i class="fa fa-cog fa-fw"></i> Security</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-8 tab-content"> 
                    <div id="item-1-1" class="tab-pane fade show active" role="tabpanel" aria-labelledby="item-1-1-tab">
                        <div class="setting-body">
                            <%- include("partials/messages") %>
                            <h3>Edit Profile</h3>
                            <hr>
                                <div class="container">
                                    <div class="text-center">
                                        <img src=<%= currentUser.avatar %> class="rounded" alt="Stock Profile Picture">
                                    </div>
                                    <form action="/profile/avatar" method="POST" encType="multipart/form-data">
                                    <div class="input-group mb-5 col-md-8 col-sm-12 mx-auto">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="inputGroupFile02" name="avatar">
                                            <label class="custom-file-label text-center" for="inputGroupFile02">Choose file</label>
                                        </div>
                                        <div class="input-group-append">
                                            <input type="submit" value="Upload" class="input-group-text">
                                        </div>
                                    </div>
                                    </form>
                                    <form action="/profile" method="POST">
                                    <div class="form-row">
                                        <div class="col-md-8 mx-auto">
                                            <input type="text" class="form-control" placeholder="Name" name="name" value="<%= currentUser.name %>">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-8 mx-auto">
                                            <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name = "email" value=<%= currentUser.email %>>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-8 mx-auto">
                                            <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" name="location" 
                                            <% if(profile != null){ %>
                                            value="<%= profile.location %>"
                                            <% }else{ %> 
                                                value=""
                                            <% } %> 
                                            >
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-profile">Update</button>
                                    <p><em>Date joined: <%= currentUser.date %></em></p>
                                    </form>
                                </div>
                        </div>
                    </div>
                    <div id="item-1-2" class="tab-pane fade" role="tabpanel" aria-labelledby="item-1-2-tab"> 
                        <div class="setting-body">
                            <h3>Favorites</h3>
                            <hr>
                            <div class="container">
                                <div class="row product-list dev">
                                    <!-- Repeat -->
                                    <div class="col-md-6 product-item">
                                        <div class="product-container">
                                            <div class="row">
                                                <div class="col-md-12"><a class="product-image" href="#"><img src="assets/img/corona.jpg"></a></div>
                                            </div>
                                            <div class="row">
                                                <div class="col-8">
                                                    <h2><a href="#">Corona</a></h2>
                                                </div>
                                                <div class="col-4 btn btn-outline-profile btn-sm"><a class="small-text" href="#">Add To Menu </a></div>
                                            </div>
                                            <div class="product-rating"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i
                                                    class="fa fa-star"></i><i class="fa fa-star-half"></i><a class="small-text" href="#">82 reviews</a>
                                            </div>
                                            <div class="row">
                                                <div class="col-12">
                                                    <p class="product-description">This beer is not associated with the virus.</p>
                                                    <div class="row">
                                                        <div class="col-6"><button class="btn btn-light" type="button">Add To Favorites</button></div>
                                
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="item-1-3" class="tab-pane fade" role="tabpanel" aria-labelledby="item-1-3-tab">
                        <div class="setting-body">
                            <h3>Take the Beer Personality Test</h3>
                            <hr>
                            <p>Not sure of what type of beer suits you? Click the button below to find out!</p>
                            <button class="btn btn-profile">Beer Personality Quiz</button>
                        </div>
                    </div>
                    <div id="item-1-4" class="tab-pane fade" role="tabpanel" aria-labelledby="item-1-4-tab">
                        <div class="setting-body">
                            <h3>Change Password</h3>
                            <hr>
                            <div class="container">
                                <div class="form-group">
                                    <label for="oldPassword">Old Password</label>
                                    <input type="password" class="form-control" id="oldPassword">
                                </div>
                                <div class="form-group">
                                    <label for="newPassword">New Password</label>
                                    <input type="password" class="form-control" id="newPassword">
                                </div>
                                <div class="form-group">
                                    <label for="confirmPassword">Confirm Password</label>
                                    <input type="password" class="form-control" id="confirmPassword">
                                </div>
                                <button class="btn btn-profile">Update Password</button>
                                <a href="#" style = "font-size: small;">Forgot Password?</a>
                            </div>
                            
                        </div>
                    </div>
                        
                </div>
            </div>
        </div>
    </div>
<%- include('partials/footer') %>